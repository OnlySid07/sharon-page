---
// src/layouts/Layout.astro
const { title = "Mi sitio", children } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Ejemplo: Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">

    <!-- Estilos globales -->
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: 'Orbitron', sans-serif;
        background: url('/black.gif') no-repeat center center fixed;
        background-size: contain;
        color: white;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }

    </style>
  </head>
  <body>
    {children}
  </body>
</html>
